@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Student>;

<h1>Students</h1>
<p>Total Students: @Model.Count()</p>
@if (@Model.Count == 0)
{
  <h3>No Students have been added yet!</h3>
}

@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId }, new {id = "linkColor"})</li>
  <p>Date Enrolled: @Html.ActionLink($"{student.DateEnrolled}", "Details", new { id = student.StudentId }, new {id =
  "linkColor"})</p>


}





<p>@Html.ActionLink("Add new student", "Create")</p>
